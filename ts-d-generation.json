{
  "compilerOptions": {
    "lib": [
      "es2022"
    ],
    "downlevelIteration": true,
    "allowJs": true,
    "checkJs": true,
    "baseUrl": "./src",
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist/types",
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "declarationMap": false
  },
  "include": [
    "src/**/*"
  ]
}